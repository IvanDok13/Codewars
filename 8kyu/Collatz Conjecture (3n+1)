const hotpo = (n) => {
  
    let count = 0;
    
    if (n === 1 || n === -1 || n === 0) {
      return 0; 
   
    } else {
     
      while (n !== 1) {
        if (n % 2 === 0) {
          n = n / 2;
              
        } else {
          n = 3 * n + 1;
          
        }
        count += 1;
      }
      
    }
    
  return count;
};
console.log(hotpo(5)) //
